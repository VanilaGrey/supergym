<section class="price-section {{ bemMix }}" {{ decor ? background(decor) }}>
	<div class="price-section__inner {{ decor ? 'price-section__inner--decor' }} container">
		<h2 class="price-section__heading heading">{{ data.heading }}</h2>
		{{ content ?? ''}}

		{% if component and data %}
			{% include component ~ '.twig' with data|merge({ bemMix: 'price-section__body' }) %}
		{% endif %}
	</div>
</section>
